@model IEnumerable<PhoneBook.Data.Entities.Contact>

@{
    ViewData["Title"] = "Contacts";
    var no = 0;
}

<h1>Contacts</h1>
<div class="row">
    <div class="col-12">
        <div class="row">
            <div class="col-md-3">
                <a asp-action="CreateContact" class="btn btn-info btn-rounded"><i class="fas fa-plus-circle"></i>&nbsp; Create Contact</a>
            </div>
        </div>
        <div class="table-responsive mt-4">
            <table id="myTable" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>No</th>
                        <th>Name</th>
                        <th>Surname</th>
                        <th>Company</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        no++;
                        <tr>
                            <td>@no</td>
                            <td><a asp-action="ViewContact" asp-route-contactId="@item.UUID">@item.Name</a></td>
                            <td>@item.Surname</td>
                            <td>@item.Company</td>
                            <td>
                                <a asp-action="EditContact" asp-route-contactId="@item.UUID" style="text-decoration: none" title="Edit">
                                    <i class="far fa-edit"></i>
                                </a>&nbsp;
                                <a asp-action="Deletecontact" asp-route-contactId="@item.UUID" style="color:red;" title="Delete" onclick="return confirm('Are you sure you wish to delete this contact?');">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}